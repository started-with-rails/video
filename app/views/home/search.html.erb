<div id="content">
   <div id="inner-content" class="row clearfix">
      <div id="main" class="large-9 medium-12 columns first clearfix" role="main" data-controller="videos">
         <h1 class="archive-title"><span>Search Results for:</span> <span> <%=params[:q]%> </span></h1>
         <dl class="tabs radius">
            <!-- Grid view /List view -->
            <!-- Button of grid - list view -->
            <%= render 'tabs' %>
            <!-- #End-->
            <!-- #tabs start -->
              <dd class="<%=get_tab_status('latest', params[:tab])%>">
                  <%=link_to 'Latest', search_path(q: params[:q], tab: 'latest') %></dd>
               <dd class="<%=get_tab_status('most_viewed', params[:tab])%>">
                  <%=link_to 'Most Viewed', search_path(q: params[:q], tab: 'most_viewed') %></dd>
               <dd class="<%=get_tab_status('most_commented', params[:tab])%>">
                  <%=link_to 'Most Commented', search_path(q: params[:q], tab: 'most_commented') %></dd>
            <!-- #tabs end -->
         </dl>
         <div class="tabs-content row grid" id="video-cat-content" data-target="videos.content">
            <div class="content thumbnails active" id="most_video_view">
               <%= render(VideoItemComponent.with_collection(@videos)) %>
               <%= paginate @videos %>
            </div>
         </div>
      </div>
      <!-- end #main -->
      <!-- Primary Sidebar widget -->
      <div id="sidebar1" class="sidebar large-3 medium-12 columns" role="complementary">
         <div id="tmpl_adv_widget-3" class="widget widget Advertise">
            <div class="widget-wrap widget-inside">
               <div class="advt advt-1c">
                  <a href="/"><img src="<%=asset_path('banner.jpg')%>"></a> 
               </div>
            </div>
         </div>
         <div id="tmpl_subscriber_widget-8" class="widget widget Newsletter subscribe">
            <div class="widget-wrap widget-inside">
               <div class="subscribe newsletter_subscribe_footer_widget">
                  <div class="subscribe_wall">
                     <div class="subscribe_cont">
                        <h3 class="widget-title h2"><span class="red">Subscribe</span> To Newsletter</h3>
                        <p> Get latest news about us directly in your inbox. We will never spam, Promise. </p>
                        <span class="newsletter_msg" id="newsletter_msg"> </span>
                        <input type="text" name="name" id="name" value="" class="field" onfocus="if (this.placeholder == 'Name') {this.placeholder = '';}" onblur="if (this.placeholder == '') {this.placeholder = 'Name';}" placeholder="Name">
                        <input type="text" name="email" id="email" value="" class="field" onfocus="if (this.placeholder == 'Your Email Address') {this.placeholder = '';}" onblur="if (this.placeholder == '') {this.placeholder = 'Your Email Address';}" placeholder="Your Email Address">
                        <input class="replace button" type="submit" name="mailchimp_submit" id="mailchimp_submit" value="Subscribe">
                     </div>
                  </div>
               </div>
               <!--End mc_embed_signup-->
            </div>
         </div>
      </div>
   </div>
   <!-- end #inner-content -->
</div>