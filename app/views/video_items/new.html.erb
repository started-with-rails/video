<div id="content" data-controller="videos">
   <div id="inner-content" class="row clearfix">
      <div id="main" class="large-9 medium-12 columns" role="main">
         <ul class="breadcrumbs hide-for-xsmall-only show-for-medium-up">
            <span class="trail-begin">
               <li><a href="https://demo.templatic.com/video" title="Video" rel="home" class="trail-begin">Home</a></li>
            </span>
            <span class="trail-end">Submit Video</span>
         </ul>
         <article id="post-" class="clearfix post-2554 page type-page status-publish hentry" role="article" >
            <header class="article-header">
               <h1 class="page-title">Submit Video</h1>
            </header>
            <!-- end article header -->
            <section class="entry-content clearfix" itemprop="articleBody">
               <p>This is your video submission form from where users will be able to add their video listings on your website.</p>
               <%= simple_form_for @video do |f| %>
                <div class="accordion" id="post-listing" >
                     <div id="step-post" class="accordion-navigation step-wrapper step-post">
                        <a class="step_enter_detail step-heading submit-video active" href="#"><span>1</span><span>Enter Details</span><span></span></a>
                        <div id="post" class="step-post content active clearfix">
                           <div id="submit_form_custom_fields" class="submit_form_custom_fields">
                              <div class='fields-set'>

                               

                                    <%= f.input :video_type,     as: :select, collection: VideoItem.types , prompt: "Select Video Type",label_method: :second, value_method: :first, input_html: { data: { action: "videos#set_video_input_type", target: "videos.type" } } %>                                        
                              </div>

                              
                                 <div class='fields-set hidden'  data-target="videos.url" >			
                                    <%= f.input :video_url %>
                                 </div>

                                   <div class='fields-set hidden'  data-target="videos.file" >			
                                    <%= f.input :video_file , as: :file %>
                                 </div>

                                 <div class='fields-set hidden' data-target="videos.embed_code">			
                                    <%= f.input :embed_code, as: :text %>
                                 </div>

                             
                                
                                 <div class="fields-set">
                                  <%= f.input :allow_download, as: :boolean, checked_value: true, unchecked_value: false %>
                                 </div>
                              
                              <!--common option for upload video and url-->
                              <div class="fields-set div-autoplay" style="">
                                  <%= f.input :auto_play, as: :boolean, checked_value: true, unchecked_value: false %>
                              </div>
                            
                              <div id="div_video_thumbnail_option" >
                                 <div class="fields-set">
                                   <%= f.input :thumbnail_option,  as: :select,prompt: "Select Thumbnail Type", collection: VideoItem.video_thumbnail_options ,label_method: :second, value_method: :first, input_html: { data: { action: "videos#set_video_thumbnail_type", target: "videos.thumbnail_option" } } %> 
                                 </div>
                              </div>
                              <div class="fields-set hidden" data-target="videos.thumbnail">
                                 <%= f.input :video_thumbnail , as: :file %>
                              </div>
                              <div class='fields-set'>      
                                     <%= f.association :categories %>
                              </div>
                              <div class='fields-set'>			
                              <%= f.input :title %>
                              </div>
                              <div class='fields-set'>                   
                                <%= f.input :excerpt , as: :text%>
                              </div>
                              <div class='fields-set'>
                                   <%= f.input :description, as: :text %>
                              </div>
                                <div class='fields-set'>
                                  <%= f.input :accepted_terms_and_conditions, as: :boolean %>
                              </div>
                           </div>
                           <input type="submit" class="button secondary_btn post-edit-link" value="Create" />&nbsp;&nbsp;                        
                        </div>
                     </div>
                  </div>
               <%end%>
               <div id="preview_submit_from_videos"  class="reveal-modal singular-videos preview_submit_from_data" data-reveal></div>
              
            </section>
            <!-- end article section -->
            <footer class="article-footer">
               <p class="clearfix"></p>
            </footer>
            <!-- end article footer -->
         </article>
         <!-- end article -->
         <!-- You can start editing here. -->
         <!-- If comments are closed. -->
         <!--p class="nocomments">Comments are closed.</p-->
      </div>
      <!-- end #main -->
      <!-- Primary Sidebar widget -->
     <%= render 'shared/sidebar' %>
   <!-- end #inner-content -->
</div>
<!-- end #content -->